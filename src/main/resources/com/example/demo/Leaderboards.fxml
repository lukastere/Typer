        </columns>
      </TableView>
      <ComboBox fx:id="comboBoxLeaderboard" layoutX="177.0" layoutY="21.0" onAction="#checkChoice" prefHeight="25.0" prefWidth="237.0" promptText="Choose scoreboard" />
