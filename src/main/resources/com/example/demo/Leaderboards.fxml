          <TableColumn fx:id="name" prefWidth="99.0" text="Username" />
          <TableColumn fx:id="speed" prefWidth="86.0" text="Speed(WPM)" />
            <TableColumn fx:id="accuracy" prefWidth="124.0" text="Accuracy %" />
